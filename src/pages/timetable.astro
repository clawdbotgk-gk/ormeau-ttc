            <div><h3 class="text-xl font-bold text-gray-900 dark:text-white">Adults Intermediate</h3><p class="text-gray-500 dark:text-gray-400">All Levels</p></div>
            <div class="text-right"><span class="text-primary font-bold">8:15 PM - 9:30 PM</span><br/><span class="px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 rounded text-sm">FULL</span></div>
          </div>
        </div>
      </div>

      <!-- Thursday -->
      <div class="timetable-day hidden" id="thursday">
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg border-l-4 border-yellow-500 mb-4">
          <div class="flex justify-between items-center">
