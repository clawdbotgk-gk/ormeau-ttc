---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Club Champions - Ormeau Table Tennis Club";
const pageDescription = "Celebrating the champions of Ormeau Table Tennis Club. Honoring individual and team achievements from our club's history.";
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Navigation -->
  <!-- NAV_PLACEHOLDER_START -->
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10">
      <div class="flex justify-between items-center h-28">
        <div class="flex-shrink-0 flex items-center group cursor-pointer gap-4">
          <a href="/" class="relative overflow-hidden rounded-xl shadow-sm transition-transform duration-300 group-hover:scale-105">
            <img alt="Ormeau Logo" class="h-14 w-auto block dark:hidden" src="https://ormeautabletennis.com/wp-content/uploads/2021/12/logoOrmeauInverse@2x-e1508851762736.png"/>
            <img alt="Ormeau Logo" class="h-14 w-auto hidden dark:block" src="https://ormeautabletennis.com/wp-content/uploads/2021/12/logoOrmeauInverse@2x-e1508851762736.png"/>
          </a>
        </div>
        <div class="hidden md:flex flex-1 justify-center space-x-12">
          <a class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary font-medium text-lg transition-all duration-200 nav-link" href="/">Home</a>
          <a class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary font-medium text-lg transition-all duration-200 nav-link" href="/about">About</a>
          <div class="relative group">
            <span class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary font-medium text-lg transition-all duration-200 cursor-pointer">Club</span>
            <div class="absolute left-0 top-full pt-2 hidden group-hover:block z-50">
              <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl py-2 min-w-40">
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary" href="/timetable">Timetable</a>
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary" href="/events">Events</a>
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary" href="/teams">Teams</a>
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary" href="/champions">Champions</a>
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary" href="/partners">Partners</a>
              </div>
            </div>
          </div>
          <a class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary font-medium text-lg transition-all duration-200 nav-link" href="/contact">Contact</a>
        </div>
        <div class="hidden md:flex items-center">
          <a class="px-8 py-3.5 rounded-full bg-primary text-white font-bold hover:bg-primary-hover transition-all duration-300 shadow-lg shadow-primary/25 hover:shadow-primary/40 transform hover:-translate-y-0.5 active:translate-y-0" href="/join">Join Now</a>
        </div>
        <button id="mobile-menu-btn" class="md:hidden flex items-center text-gray-700 dark:text-gray-300 hover:text-primary focus:outline-none p-2">
          <span class="material-icons text-3xl">menu</span>
        </button>
      </div>
    </div>
  </nav>

  <!-- Mobile Menu Panel -->
  <div id="mobile-menu" class="fixed inset-0 z-40 bg-background-light dark:bg-background-dark transform translate-x-full transition-transform duration-300 md:hidden">
    <div class="flex flex-col h-full pt-20 px-6">
      <div class="flex justify-end mb-8">
        <button id="mobile-menu-close" class="p-2 text-gray-700 dark:text-gray-300">
          <span class="material-icons text-3xl">close</span>
        </button>
      </div>
      <nav class="flex flex-col space-y-6 text-xl">
        <a href="/" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Home</a>
        <a href="/about" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">About</a>
        <a href="/timetable" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Timetable</a>
        <a href="/events" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Events</a>
        <a href="/teams" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Teams</a>
        <a href="/champions" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Champions</a>
        <a href="/contact" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Contact</a>
        <a href="/join" class="mt-4 px-6 py-3 bg-primary text-white font-bold text-center rounded-full hover:bg-primary-hover">Join Now</a>
      </nav>
    </div>
  </div>

  <script is:inline>
    (function() {
      const menuBtn = document.getElementById('mobile-menu-btn');
      const closeBtn = document.getElementById('mobile-menu-close');
      const mobileMenu = document.getElementById('mobile-menu');
      if (menuBtn && mobileMenu) {
        menuBtn.addEventListener('click', function() { mobileMenu.classList.remove('translate-x-full'); });
      }
      if (closeBtn && mobileMenu) {
        closeBtn.addEventListener('click', function() { mobileMenu.classList.add('translate-x-full'); });
      }
    })();
  </script>

  <script is:inline>
    (function() {
      const path = window.location.pathname;
      document.querySelectorAll('.nav-link').forEach(link => {
        const href = link.getAttribute('href');
        if ((path === '/' && href === '/') || href === path || href === path + '/') {
          link.classList.add('text-primary', 'dark:text-primary');
        }
      });
    })();
  </script>

  <!-- Hero Title Section -->
  <section class="py-20 bg-background-light dark:bg-background-dark">
    <div class="max-w-7xl mx-auto px-6 text-center">
      <h2 class="text-5xl md:text-7xl font-black mb-6 tracking-tight text-gray-900 dark:text-white">
        CLUB <span class="text-primary">CHAMPIONS</span>
      </h2>
      <p class="max-w-2xl mx-auto text-gray-600 dark:text-gray-400 text-lg leading-relaxed">
        Celebrating the spirit, dedication, and excellence of our athletes. A tribute to those who have etched their names into the history of Ormeau Table Tennis Club.
      </p>
    </div>
  </section>

  <!-- Split Lists Container -->
  <section class="py-12 bg-background-light dark:bg-background-dark">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
        <!-- Left Column: Singles Honors -->
        <section class="space-y-8">
          <div class="sticky top-28 bg-background-light dark:bg-background-dark py-4 z-10 border-b-2 border-primary/20 flex items-center justify-between">
            <h3 class="text-2xl font-extrabold flex items-center gap-3 text-gray-900 dark:text-white">
              <span class="material-icons text-primary">person</span> Singles Honors
            </h3>
            <span class="text-xs font-bold uppercase tracking-widest text-gray-400">Individual Excellence</span>
          </div>
          <div class="space-y-4">
            <!-- Champion Entry -->
            <div class="group flex items-center gap-6 p-4 rounded-xl hover:bg-white dark:hover:bg-gray-800 transition-all cursor-default border border-transparent hover:border-primary/10">
              <div class="text-3xl font-light text-primary/30 group-hover:text-primary transition-colors">2023</div>
              <div class="flex-grow">
                <h4 class="text-xl font-bold group-hover:text-primary transition-colors text-gray-900 dark:text-white">James Miller</h4>
                <p class="text-sm text-gray-500 uppercase tracking-tighter">Men's Senior Champion</p>
              </div>
              <span class="material-icons text-primary opacity-0 group-hover:opacity-100 transition-opacity">military_tech</span>
            </div>
            <!-- Action Image Break -->
            <div class="relative h-64 w-full rounded-2xl overflow-hidden shadow-xl my-8">
              <img alt="Professional table tennis player mid-stroke" class="w-full h-full object-cover" src="https://scontent-lhr6-1.xx.fbcdn.net/v/t39.30808-6/560321000_1398187735646426_1941108834981037119_n.jpg?_nc_cat=109&ccb=1-7&_nc_sid=13d280&_nc_ohc=EjBazk4Dk5UQ7kNvwHzYke1&_nc_oc=Adl44Hyxl_y5aHjbJ88iGKyHgv6-LpBuFi-foI6ujX9Oph2DNRXg0tcZevbJwzZVrkKbYZSSCN-YroWvwAGA3XxQ&_nc_zt=23&_nc_ht=scontent-lhr6-1.xx&_nc_gid=UH24c_LGVJjWiKSq5BykAA&oh=00_AfsagNBARQDgl9i-9PfdGy_fPNQCMv2d3b_zhFOL56nKiQ&oe=69A12B94"/>
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent flex items-end p-6">
                <p class="text-white text-sm font-medium">Focus and Precision: The 2023 Finals</p>
              </div>
            </div>
            <div class="group flex items-center gap-6 p-4 rounded-xl hover:bg-white dark:hover:bg-gray-800 transition-all border border-transparent hover:border-primary/10">
              <div class="text-3xl font-light text-primary/30 group-hover:text-primary">2022</div>
              <div class="flex-grow">
                <h4 class="text-xl font-bold text-gray-900 dark:text-white">Sarah Chen</h4>
                <p class="text-sm text-gray-500 uppercase tracking-tighter">Women's Senior Champion</p>
              </div>
              <span class="material-icons text-primary">emoji_events</span>
            </div>
            <div class="group flex items-center gap-6 p-4 rounded-xl hover:bg-white dark:hover:bg-gray-800 transition-all border border-transparent hover:border-primary/10">
              <div class="text-3xl font-light text-primary/30 group-hover:text-primary">2021</div>
              <div class="flex-grow">
                <h4 class="text-xl font-bold text-gray-900 dark:text-white">David Thompson</h4>
                <p class="text-sm text-gray-500 uppercase tracking-tighter">Men's Senior Champion</p>
              </div>
              <span class="material-icons text-primary">emoji_events</span>
            </div>
            <div class="group flex items-center gap-6 p-4 rounded-xl hover:bg-white dark:hover:bg-gray-800 transition-all border border-transparent hover:border-primary/10">
              <div class="text-3xl font-light text-primary/30 group-hover:text-primary">2020</div>
              <div class="flex-grow">
                <h4 class="text-xl font-bold text-gray-900 dark:text-white">Emma Wilson</h4>
                <p class="text-sm text-gray-500 uppercase tracking-tighter">Women's Senior Champion</p>
              </div>
              <span class="material-icons text-primary">emoji_events</span>
            </div>
          </div>
        </section>

        <!-- Right Column: Team Honors -->
        <section class="space-y-8">
          <div class="sticky top-28 bg-background-light dark:bg-background-dark py-4 z-10 border-b-2 border-primary/20 flex items-center justify-between">
            <h3 class="text-2xl font-extrabold flex items-center gap-3 text-gray-900 dark:text-white">
              <span class="material-icons text-primary">groups</span> Team Honors
            </h3>
            <span class="text-xs font-bold uppercase tracking-widest text-gray-400">Club Legacy</span>
          </div>
          <div class="space-y-4">
            <div class="group flex items-center gap-6 p-4 rounded-xl hover:bg-white dark:hover:bg-gray-800 transition-all border border-transparent hover:border-primary/10">
              <div class="text-3xl font-light text-primary/30 group-hover:text-primary">2023</div>
              <div class="flex-grow">
                <h4 class="text-xl font-bold text-gray-900 dark:text-white">Ormeau Premier A</h4>
                <p class="text-sm text-gray-500 uppercase tracking-tighter">National League Div 1 Winners</p>
              </div>
              <span class="material-icons text-primary">rewarded_ads</span>
            </div>
            <div class="group flex items-center gap-6 p-4 rounded-xl hover:bg-white dark:hover:bg-gray-800 transition-all border border-transparent hover:border-primary/10">
              <div class="text-3xl font-light text-primary/30 group-hover:text-primary">2022</div>
              <div class="flex-grow">
                <h4 class="text-xl font-bold text-gray-900 dark:text-white">Ormeau Youth Elite</h4>
                <p class="text-sm text-gray-500 uppercase tracking-tighter">Junior Inter-Club Champions</p>
              </div>
              <span class="material-icons text-primary">rewarded_ads</span>
            </div>
            <!-- Action Image Break -->
            <div class="relative h-64 w-full rounded-2xl overflow-hidden shadow-xl my-8">
              <img alt="Team huddle celebrating a victory" class="w-full h-full object-cover" src="https://scontent-lhr8-2.xx.fbcdn.net/v/t39.30808-6/540735236_1358210349644165_5176070366626030508_n.jpg?_nc_cat=106&ccb=1-7&_nc_sid=13d280&_nc_ohc=CD4sUhLKOoQQ7kNvwGum8_6&_nc_oc=Adln0MRW0Q5CUy0fiX9krP2F5YRInpCOnEMhrwY5sRHDhNhqWSSbowpeiW-HaJBCo_2uOFfN4b2-ZNUo3_O-mB_c&_nc_zt=23&_nc_ht=scontent-lhr8-2.xx&_nc_gid=jlJDXAjrpWzroj0ViyrYVA&oh=00_AfsbTJYb6kTDoya7KYfUUkKgGggkCDtqRa3TgdzPIRD3Hw&oe=69A14A16"/>
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent flex items-end p-6">
                <p class="text-white text-sm font-medium">United in Victory: The Youth Elite Squad</p>
              </div>
            </div>
            <div class="group flex items-center gap-6 p-4 rounded-xl hover:bg-white dark:hover:bg-gray-800 transition-all border border-transparent hover:border-primary/10">
              <div class="text-3xl font-light text-primary/30 group-hover:text-primary">2021</div>
              <div class="flex-grow">
                <h4 class="text-xl font-bold text-gray-900 dark:text-white">Ormeau Vets Team</h4>
                <p class="text-sm text-gray-500 uppercase tracking-tighter">Regional Masters Shield</p>
              </div>
              <span class="material-icons text-primary">rewarded_ads</span>
            </div>
            <div class="group flex items-center gap-6 p-4 rounded-xl hover:bg-white dark:hover:bg-gray-800 transition-all border border-transparent hover:border-primary/10">
              <div class="text-3xl font-light text-primary/30 group-hover:text-primary">2019</div>
              <div class="flex-grow">
                <h4 class="text-xl font-bold text-gray-900 dark:text-white">Premier Squad B</h4>
                <p class="text-sm text-gray-500 uppercase tracking-tighter">Division 2 Promotion Winners</p>
              </div>
              <span class="material-icons text-primary">rewarded_ads</span>
            </div>
          </div>
        </section>
      </div>

      <!-- Hall of Fame Callout -->
      <div class="mt-24 p-12 rounded-3xl bg-primary/5 border border-primary/20 flex flex-col md:flex-row items-center gap-10">
        <div class="flex-grow">
          <h4 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Want to see the full historical archives?</h4>
          <p class="text-gray-600 dark:text-gray-400">Our records date back to 1985. Discover the legends who built our club from the ground up.</p>
        </div>
        <button class="bg-primary text-white px-8 py-4 rounded-xl text-lg font-bold hover:bg-primary-hover transition-colors whitespace-nowrap">Explore Full History</button>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-surface-dark text-white pt-16 pb-8 border-t border-gray-800 mt-20">
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
        <div>
          <div class="flex items-center mb-6">
            <img alt="Ormeau Logo" class="h-10 w-auto" src="https://ormeautabletennis.com/wp-content/uploads/2021/12/logoOrmeauInverse@2x-e1508851762736.png"/>
          </div>
          <p class="text-gray-400 text-sm leading-relaxed mb-6">Belfast's premier table tennis club, welcoming players of all ages and abilities since 2013. Founded by Keith & Gervis Knox.</p>
          <div class="flex space-x-3">
            <a href="https://www.facebook.com/ormeautt/" target="_blank" rel="noopener noreferrer" aria-label="Facebook" class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center text-gray-400 hover:bg-primary hover:text-white transition-all">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.77,7.46H14.5v-1.9c0-.9.6-1.1,1-1.1h3V.5h-4.33C10.24.5,9.5,3.44,9.5,5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4Z"/></svg>
            </a>
            <a href="https://x.com/ormeauttc" target="_blank" rel="noopener noreferrer" aria-label="Twitter/X" class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center text-gray-400 hover:bg-primary hover:text-white transition-all">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
            </a>
          </div>
        </div>
        <div>
          <h4 class="text-lg font-bold mb-6 text-white">Quick Links</h4>
          <ul class="space-y-3 text-sm text-gray-400">
            <li><a class="hover:text-primary transition" href="/">Home</a></li>
            <li><a class="hover:text-primary transition" href="/about">About Us</a></li>
            <li><a class="hover:text-primary transition" href="/timetable">Timetable</a></li>
            <li><a class="hover:text-primary transition" href="/events">Events</a></li>
            <li><a class="hover:text-primary transition" href="/teams">Teams</a></li>
            <li><a class="hover:text-primary transition" href="/champions">Champions</a></li>
            <li><a class="hover:text-primary transition" href="/join">Join</a></li>
            <li><a class="hover:text-primary transition" href="/contact">Contact</a></li>
          </ul>
        </div>
        <div>
          <h4 class="text-lg font-bold mb-6 text-white">Contact Us</h4>
          <ul class="space-y-4 text-sm text-gray-400">
            <li class="flex items-start">
              <span class="material-icons text-primary mr-3 text-lg mt-0.5">place</span>
              <span>113 The Mount,<br/>Belfast, BT5 4ND</span>
            </li>
            <li class="flex items-center">
              <span class="material-icons text-primary mr-3 text-lg">email</span>
              <a href="mailto:ormeautt@live.co.uk" class="hover:text-primary transition">ormeautt@live.co.uk</a>
            </li>
          </ul>
        </div>
        <div>
          <h4 class="text-lg font-bold mb-6 text-white">Newsletter</h4>
          <p class="text-gray-400 text-sm mb-4">Subscribe for club news and updates.</p>
          <form id="newsletter-form" class="flex flex-col gap-3">
            <input class="bg-gray-800 border border-gray-700 rounded-lg py-2.5 px-4 text-sm focus:ring-2 focus:ring-primary focus:border-transparent text-white w-full" placeholder="Your email" type="email"/>
            <button class="bg-primary text-white text-sm font-bold py-2.5 rounded-lg hover:bg-primary-hover transition" type="submit">Subscribe</button>
          </form>
        </div>
      </div>
      <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center text-xs text-gray-500">
        <p>Â© 2026 Ormeau Table Tennis Club. All rights reserved.</p>
        <div class="flex space-x-6 mt-4 md:mt-0">
          <a class="hover:text-primary transition" href="/privacy">Privacy Policy</a>
          <a class="hover:text-primary transition" href="/terms">Terms of Service</a>
        </div>
      </div>
    </div>
  </footer>
</Layout>
