---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Partners - Ormeau Table Tennis Club";
const pageDescription = "Meet the sponsors and partners who support Ormeau Table Tennis Club. Together we provide world-class facilities and coaching to our community in Belfast.";
const pageImage = "https://scontent-lhr8-2.xx.fbcdn.net/v/t39.30808-6/540735236_1358210349644165_5176070366626030508_n.jpg";
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Open Graph -->
  <meta property="og:title" content={pageTitle} />
  <meta property="og:description" content={pageDescription} />
  <meta property="og:image" content={pageImage} />
  <meta property="og:url" content="https://ormeautabletennis.com/partners" />
  <meta property="og:type" content="website" />
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={pageTitle} />
  <meta name="twitter:description" content={pageDescription} />
  <meta name="twitter:image" content={pageImage} />

  <!-- Navigation -->
  <!-- NAV_PLACEHOLDER_START -->
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10">
      <div class="flex justify-between items-center h-28">
        <div class="flex-shrink-0 flex items-center group cursor-pointer gap-4">
          <a href="/" class="relative overflow-hidden rounded-xl shadow-sm transition-transform duration-300 group-hover:scale-105">
            <img alt="Ormeau Logo" class="h-14 w-auto block dark:hidden" src="https://ormeautabletennis.com/wp-content/uploads/2021/12/logoOrmeauInverse@2x-e1508851762736.png"/>
            <img alt="Ormeau Logo" class="h-14 w-auto hidden dark:block" src="https://ormeautabletennis.com/wp-content/uploads/2021/12/logoOrmeauInverse@2x-e1508851762736.png"/>
          </a>
        </div>
        <div class="hidden md:flex flex-1 justify-center space-x-12">
          <a class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary font-medium text-lg transition-all duration-200 nav-link" href="/">Home</a>
          <a class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary font-medium text-lg transition-all duration-200 nav-link" href="/about">About</a>
          <div class="relative group">
            <span class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary font-medium text-lg transition-all duration-200 cursor-pointer">Club</span>
            <div class="absolute left-0 top-full pt-2 hidden group-hover:block z-50">
              <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl py-2 min-w-40">
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary" href="/timetable">Timetable</a>
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary" href="/events">Events</a>
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary" href="/teams">Teams</a>
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary" href="/champions">Champions</a>
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary" href="/partners">Partners</a>
              </div>
            </div>
          </div>
          <a class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary font-medium text-lg transition-all duration-200 nav-link" href="/contact">Contact</a>
        </div>
        <div class="hidden md:flex items-center">
          <a class="px-8 py-3.5 rounded-full bg-primary text-white font-bold hover:bg-primary-hover transition-all duration-300 shadow-lg shadow-primary/25 hover:shadow-primary/40 transform hover:-translate-y-0.5 active:translate-y-0" href="/join">Join Now</a>
        </div>
        <button id="mobile-menu-btn" class="md:hidden flex items-center text-gray-700 dark:text-gray-300 hover:text-primary focus:outline-none p-2">
          <span class="material-icons text-3xl">menu</span>
        </button>
      </div>
    </div>
  </nav>

  <!-- Mobile Menu Panel -->
  <div id="mobile-menu" class="fixed inset-0 z-40 bg-background-light dark:bg-background-dark transform translate-x-full transition-transform duration-300 md:hidden">
    <div class="flex flex-col h-full pt-20 px-6">
      <div class="flex justify-end mb-8">
        <button id="mobile-menu-close" class="p-2 text-gray-700 dark:text-gray-300">
          <span class="material-icons text-3xl">close</span>
        </button>
      </div>
      <nav class="flex flex-col space-y-6 text-xl">
        <a href="/" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Home</a>
        <a href="/about" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">About</a>
        <a href="/timetable" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Timetable</a>
        <a href="/events" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Events</a>
        <a href="/teams" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Teams</a>
        <a href="/champions" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Champions</a>
        <a href="/partners" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Partners</a>
        <a href="/contact" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Contact</a>
        <a href="/join" class="mt-4 px-6 py-3 bg-primary text-white font-bold text-center rounded-full hover:bg-primary-hover">Join Now</a>
      </nav>
    </div>
  </div>

  <script is:inline>
    (function() {
      const menuBtn = document.getElementById('mobile-menu-btn');
      const closeBtn = document.getElementById('mobile-menu-close');
      const mobileMenu = document.getElementById('mobile-menu');
      if (menuBtn && mobileMenu) {
        menuBtn.addEventListener('click', function() { mobileMenu.classList.remove('translate-x-full'); });
      }
      if (closeBtn && mobileMenu) {
        closeBtn.addEventListener('click', function() { mobileMenu.classList.add('translate-x-full'); });
      }
    })();
  </script>

  <script is:inline>
    (function() {
      const path = window.location.pathname;
      document.querySelectorAll('.nav-link').forEach(link => {
        const href = link.getAttribute('href');
        if ((path === '/' && href === '/') || href === path || href === path + '/') {
          link.classList.add('text-primary', 'dark:text-primary');
        }
      });
    })();
  </script>

  <!-- Hero Section: Community Impact -->
  <section class="relative w-full px-4 md:px-8 pt-8 pb-12">
    <div class="mx-auto max-w-7xl">
      <div class="relative h-[400px] md:h-[500px] w-full overflow-hidden rounded-xl shadow-2xl">
        <img alt="Club members with sponsor banners" class="h-full w-full object-cover brightness-75" src="https://scontent.fbhd1-2.fna.fbcdn.net/v/t1.6435-9/168465893_3987671477981645_7202077643737766560_n.jpg?_nc_cat=106&ccb=1-7&_nc_sid=f798df&_nc_ohc=78xQ6ACxfdAQ7kNvwFwtDH5&_nc_oc=Adlkn8XzpDEWGVpxN1xzSMHL9o3mwcCnjdCgiuCCK45IOvFr-Fl35OydLxyF-_tpT9iqBTWi9CHOTxS0fRY1cCuP&_nc_zt=23&_nc_ht=scontent.fbhd1-1.fna&_nc_gid=-0C9N0Goo3X2CdgAZnuxKg&oh=00_Aft-tO580mNbri9nEFkihjIQtPjbcRzBzosPJJJblv_tzw&oe=69C3CE52"/>
        <div class="absolute inset-0 bg-gradient-to-t from-background-dark/80 via-transparent to-transparent flex flex-col justify-end p-8 md:p-16">
          <h1 class="max-w-3xl text-4xl font-black leading-tight text-white md:text-6xl tracking-tight">
            Empowering Sport Through <span class="text-primary">Community Support</span>
          </h1>
          <p class="mt-4 max-w-2xl text-lg text-gray-200 font-medium leading-relaxed">
            Our sponsors are more than just logos; they are the backbone of our community. Together, we provide world-class facilities and coaching to over 150 members.
          </p>
        </div>
      </div>
      
      <!-- Impact Quick Stats -->
      <div class="relative -mt-10 mx-auto grid max-w-5xl grid-cols-1 gap-4 px-4 sm:grid-cols-4">
        <div class="flex flex-col items-center justify-center rounded-xl bg-white dark:bg-gray-800 p-6 shadow-xl border border-primary/5">
          <span class="text-primary text-3xl font-black">10+</span>
          <span class="text-sm font-bold uppercase tracking-widest text-gray-500 dark:text-gray-400">Partners</span>
        </div>
        <div class="flex flex-col items-center justify-center rounded-xl bg-white dark:bg-gray-800 p-6 shadow-xl border border-primary/5">
          <span class="text-primary text-3xl font-black">£1000s</span>
          <span class="text-sm font-bold uppercase tracking-widest text-gray-500 dark:text-gray-400">Annual Investment</span>
        </div>
        <div class="flex flex-col items-center justify-center rounded-xl bg-white dark:bg-gray-800 p-6 shadow-xl border border-primary/5">
          <span class="text-primary text-3xl font-black">20+</span>
          <span class="text-sm font-bold uppercase tracking-widest text-gray-500 dark:text-gray-400">Coached Weekly Sessions</span>
        </div>
        <div class="flex flex-col items-center justify-center rounded-xl bg-white dark:bg-gray-800 p-6 shadow-xl border border-primary/5">
          <span class="text-primary text-3xl font-black">150+</span>
          <span class="text-sm font-bold uppercase tracking-widest text-gray-500 dark:text-gray-400">Members</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Partners Grid -->
  <section class="px-4 md:px-8 py-16">
    <div class="mx-auto max-w-7xl">
      <div class="mb-12 flex flex-col items-start justify-between gap-4 md:flex-row md:items-end">
        <div>
          <h2 class="text-3xl font-black tracking-tight text-gray-900 dark:text-white">Our Partners</h2>
          <div class="mt-2 h-1.5 w-24 rounded-full bg-primary"></div>
        </div>
        <p class="max-w-md text-gray-600 dark:text-gray-400 font-medium">
          Working together with organisations that share our vision for table tennis in Belfast and Northern Ireland.
        </p>
      </div>
      
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
        <!-- Partner Card 1 -->
        <div class="partner-card group flex flex-col rounded-xl bg-white dark:bg-gray-800 p-8 shadow-md border border-gray-100 dark:border-gray-700">
          <div class="mb-6 flex h-20 items-center justify-center rounded-lg bg-white dark:bg-gray-900 p-4 transition-all group-hover:scale-105">
            <img src="https://logos-api.apistemic.com/domain:mtb-law.co.uk" alt="MTB Law" class="h-full w-auto object-contain" />
          </div>
          <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">McCartan Turkington Breen</h3>
          <p class="mb-6 text-gray-600 dark:text-gray-400 text-sm leading-relaxed">
