---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us - Ormeau Table Tennis Club" description="Get in touch with Ormeau Table Tennis Club. Contact us for membership inquiries, coaching sessions, and general enquiries at 113 The Mount, Belfast.">
  <!-- Navigation -->
  <!-- NAV_PLACEHOLDER_START -->
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10">
      <div class="flex justify-between items-center h-28">
        <div class="flex-shrink-0 flex items-center group cursor-pointer gap-4">
          <div class="relative overflow-hidden rounded-xl shadow-sm transition-transform duration-300 group-hover:scale-105">
            <img alt="Ormeau Logo" class="h-14 w-auto block dark:hidden" src="https://ormeautabletennis.com/wp-content/uploads/2021/12/logoOrmeauInverse@2x-e1508851762736.png"/>
            <img alt="Ormeau Logo" class="h-14 w-auto hidden dark:block" src="https://ormeautabletennis.com/wp-content/uploads/2021/12/logoOrmeauInverse@2x-e1508851762736.png"/>
          </div>
          
        </div>
        <div class="hidden md:flex flex-1 justify-center space-x-12">
          <a class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary font-medium text-lg transition-all duration-200 nav-link" href="/">Home</a>
          <a class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary font-medium text-lg transition-all duration-200 nav-link" href="/about">About</a>
          <div class="relative group">
            <span class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary font-medium text-lg transition-all duration-200 cursor-pointer">Club</span>
            <div class="absolute left-0 top-full pt-2 hidden group-hover:block z-50">
              <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl py-2 min-w-40">
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary nav-link" href="/timetable">Timetable</a>
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary" href="/events">Events</a>
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary" href="/teams">Teams</a>
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary" href="/champions">Champions</a>
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary" href="/partners">Partners</a>
              </div>
            </div>
          </div>
          <a class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary font-medium text-lg transition-all duration-200 nav-link" href="/contact">Contact</a>
        </div>
        <div class="hidden md:flex items-center">
          <a class="px-8 py-3.5 rounded-full bg-primary text-white font-bold hover:bg-primary-hover transition-all duration-300 shadow-lg shadow-primary/25 hover:shadow-primary/40 transform hover:-translate-y-0.5 active:translate-y-0" href="/join">Join Now</a>
        </div>
        <div class="md:hidden flex items-center">
          <button id="mobile-menu-btn" class="text-gray-700 dark:text-gray-300 hover:text-primary focus:outline-none p-2">
            <span class="material-icons text-3xl">menu</span>
          </button>
        </div>
      </div>
    </div>
  </nav>

  <script is:inline>
    (function() {
      const path = window.location.pathname;
      document.querySelectorAll('.nav-link').forEach(link => {
        const href = link.getAttribute('href');
        if ((path === '/' && href === '/') || href === path || href === path + '/') {
          link.classList.add('text-primary', 'dark:text-primary');
        }
      });
    })();
  </script>

  <!-- Mobile Menu Panel -->
  <div id="mobile-menu" class="fixed inset-0 z-40 bg-background-light dark:bg-background-dark transform translate-x-full transition-transform duration-300 md:hidden">
    <div class="flex flex-col h-full pt-20 px-6">
      <div class="flex justify-end mb-8">
        <button id="mobile-menu-close" class="p-2 text-gray-700 dark:text-gray-300">
          <span class="material-icons text-3xl">close</span>
        </button>
      </div>
      <nav class="flex flex-col space-y-6 text-xl">
        <a href="/" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Home</a>
        <a href="/about" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">About</a>
        <a href="/timetable" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Timetable</a>
        <a href="/contact" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Contact</a>
        <a href="/join" class="mt-4 px-6 py-3 bg-primary text-white font-bold text-center rounded-full hover:bg-primary-hover">Join Now</a>
      </nav>
    </div>
  </div>

  <script is:inline>
    (function() {
      const menuBtn = document.getElementById('mobile-menu-btn');
      const closeBtn = document.getElementById('mobile-menu-close');
      const mobileMenu = document.getElementById('mobile-menu');
      if (menuBtn && mobileMenu) {
        menuBtn.addEventListener('click', function() { mobileMenu.classList.remove('translate-x-full'); });
      }
      if (closeBtn && mobileMenu) {
        closeBtn.addEventListener('click', function() { mobileMenu.classList.add('translate-x-full'); });
      }
    })();
  </script>

  <!-- Hero Section -->
  <section class="relative bg-background-dark text-white overflow-hidden min-h-[60vh] flex items-center justify-center">
    <div class="absolute inset-0 bg-black/50 z-10"></div>
    <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1534158914592-062992fbe900?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80')] bg-cover bg-center z-0 scale-110 blur-[3px]"></div>
    <div class="relative z-20 max-w-4xl mx-auto px-6 sm:px-8 lg:px-10 py-32 flex flex-col items-center text-center">
      <span class="inline-block py-2 px-6 rounded-full bg-primary/20 border border-primary/40 backdrop-blur-md text-sm font-bold mb-8 uppercase tracking-[0.3em] text-primary">Get In Touch</span>
      <h1 class="text-6xl md:text-8xl font-bold tracking-tight mb-8 leading-tight"> Connect With <span class="text-primary">Us</span> </h1>
      <p class="text-xl md:text-2xl text-gray-200 max-w-2xl mb-12 font-light leading-relaxed"> Have a question about membership, coaching, or club activities? We'd love to hear from you. Get in touch today. </p>
      <div class="flex flex-col items-center w-full max-w-sm gap-4">
        <a href="#contact-form" class="animate-bounce mt-8">
          <span class="material-icons text-4xl text-white/70 hover:text-white">keyboard_double_arrow_down</span>
        </a>
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <section class="py-24 bg-white dark:bg-background-dark" id="contact-form">
    <div class="max-w-4xl mx-auto px-6 sm:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold mb-4">Send us a Message</h2>
        <p class="text-gray-500 dark:text-gray-400">We'll get back to you as soon as possible.</p>
      </div>
      <iframe src="https://www.cognitoforms.com/f/nR0HQjg5VUqZ_2t6O8kL5g/307" allow="payment" style="border:0;width:100%;" height="565"></iframe>
      <script src="https://www.cognitoforms.com/f/iframe.js"></script>
    </div>
  </section>

  <!-- Location Section -->
  <section class="py-24 bg-surface-light dark:bg-surface-dark" id="location">
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10">
      <div class="grid md:grid-cols-2 gap-16">
        <div class="flex flex-col">
          <span class="text-primary font-bold tracking-widest uppercase text-sm mb-4">Find Us</span>
          <h3 class="text-3xl font-bold mb-6">Our Belfast Facility</h3>
          <div class="bg-gray-200 dark:bg-gray-800 rounded-3xl overflow-hidden aspect-[16/9] mb-8 shadow-inner">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2304.246704158926!2d-5.951917923428!3d54.5917474729791!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x486108d6eb2f83df%3A0x6b12cc703e83336c!2s113%20The%20Mount%2C%20Belfast%20BT5%204ND!5e0!3m2!1sen!2suk!4v1700000000000!5m2!1sen!2suk" 
              width="100%" 
              height="100%" 
              style="border:0;" 
              allowfullscreen="" 
              loading="lazy" 
              referrerpolicy="no-referrer-when-downgrade">
            </iframe>
          </div>
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-2xl bg-primary/10 flex items-center justify-center text-primary shrink-0">
              <span class="material-icons">place</span>
            </div>
            <div>
              <p class="text-xl font-bold text-gray-900 dark:text-white">113 The Mount</p>
              <p class="text-gray-600 dark:text-gray-400">Belfast, BT5 4ND, United Kingdom</p>
            </div>
          </div>
        </div>
        <div class="flex flex-col">
          <span class="text-primary font-bold tracking-widest uppercase text-sm mb-4">Email Us</span>
          <h3 class="text-3xl font-bold mb-6">General Inquiries</h3>
          <p class="text-lg text-gray-600 dark:text-gray-400 mb-8 leading-relaxed"> Have a specific question about memberships, elite coaching, or our school programs? Drop us an email and our team will get back to you. </p>
          <div class="bg-background-light dark:bg-background-dark p-10 rounded-3xl shadow-sm border border-gray-100 dark:border-gray-800 flex flex-col items-center justify-center grow">
            <div class="w-20 h-20 rounded-full bg-primary/10 flex items-center justify-center text-primary mb-6">
              <span class="material-icons text-4xl">alternate_email</span>
            </div>
            <a class="text-2xl md:text-3xl font-bold text-primary hover:text-primary-hover transition-colors text-center break-all" href="mailto:ormeautt@live.co.uk"> ormeautt@live.co.uk </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-surface-dark text-white pt-16 pb-8 border-t border-gray-800">
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
        <!-- Brand -->
        <div>
          <div class="flex items-center mb-6">
            <img alt="Ormeau Logo" class="h-10 w-auto" src="https://ormeautabletennis.com/wp-content/uploads/2021/12/logoOrmeauInverse@2x-e1508851762736.png"/>
            
          </div>
          <p class="text-gray-400 text-sm leading-relaxed mb-6">Belfast's premier table tennis club, welcoming players of all ages and abilities since 2013. Founded by Keith & Gervis Knox.</p>
          <div class="flex space-x-3">
            <a href="https://www.facebook.com/ormeautt/" target="_blank" rel="noopener noreferrer" aria-label="Facebook" class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center text-gray-400 hover:bg-primary hover:text-white transition-all">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.77,7.46H14.5v-1.9c0-.9.6-1.1,1-1.1h3V.5h-4.33C10.24.5,9.5,3.44,9.5,5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4Z"/></svg>
            </a>
            <a href="https://x.com/ormeauttc" target="_blank" rel="noopener noreferrer" aria-label="Twitter/X" class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center text-gray-400 hover:bg-primary hover:text-white transition-all">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
            </a>
          </div>
        </div>
        <!-- Quick Links -->
        <div>
          <h4 class="text-lg font-bold mb-6 text-white">Quick Links</h4>
          <ul class="space-y-3 text-sm text-gray-400">
            <li><a class="hover:text-primary transition class="nav-link" href="/">Home</a></li>
            <li><a class="hover:text-primary transition class="nav-link" href="/about">About Us</a></li>
            <li><a class="hover:text-primary transition class="nav-link" href="/timetable">Timetable</a></li>
            <li><a class="hover:text-primary transition class="nav-link" href="/join">Join</a></li>
            <li><a class="hover:text-primary transition class="nav-link" href="/contact">Contact</a></li>
          </ul>
        </div>
        <!-- Contact -->
        <div>
          <h4 class="text-lg font-bold mb-6 text-white">Contact Us</h4>
          <ul class="space-y-4 text-sm text-gray-400">
            <li class="flex items-start">
              <span class="material-icons text-primary mr-3 text-lg mt-0.5">place</span>
              <span>113 The Mount,<br/>Belfast, BT5 4ND</span>
            </li>
            <li class="flex items-center">
              <span class="material-icons text-primary mr-3 text-lg">email</span>
              <a href="mailto:ormeautt@live.co.uk" class="hover:text-primary transition">ormeautt@live.co.uk</a>
            </li>
          </ul>
        </div>
        <!-- Newsletter -->
        <div>
          <h4 class="text-lg font-bold mb-6 text-white">Newsletter</h4>
          <p class="text-gray-400 text-sm mb-4">Subscribe for club news and updates.</p>
          <form id="newsletter-form" class="flex flex-col gap-3">
            <input class="bg-gray-800 border border-gray-700 rounded-lg py-2.5 px-4 text-sm focus:ring-2 focus:ring-primary focus:border-transparent text-white w-full" placeholder="Your email" type="email"/>
            <button class="bg-primary text-white text-sm font-bold py-2.5 rounded-lg hover:bg-primary-hover transition" type="submit">Subscribe</button>
          </form>
        </div>
      </div>
      <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center text-xs text-gray-500">
        <p>Â© 2026 Ormeau Table Tennis Club. All rights reserved.</p>
        <div class="flex space-x-6 mt-4 md:mt-0">
          <a class="hover:text-primary transition" href="/privacy">Privacy Policy</a>
          <a class="hover:text-primary transition" href="/terms">Terms of Service</a>
        </div>
      </div>
    </div>
  </footer>
</Layout>
