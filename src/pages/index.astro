---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Ormeau Table Tennis Club - Belfast's Premier Table Tennis Club";
const pageDescription = "Join Belfast's premier table tennis club. Professional coaching for all ages, from beginners to elite players. Based at 113 The Mount, Belfast.";
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Navigation -->
  <nav class="sticky top-0 z-50 bg-background-light/95 dark:bg-background-dark/95 backdrop-blur-md border-b border-gray-100 dark:border-gray-800">
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10">
      <div class="flex justify-between items-center h-28">
        <div class="flex-shrink-0 flex items-center group cursor-pointer gap-4">
          <div class="relative overflow-hidden rounded-xl shadow-sm transition-transform duration-300 group-hover:scale-105">
            <img alt="Ormeau Logo" class="h-14 w-auto block dark:hidden" src="https://ormeautabletennis.com/wp-content/uploads/2021/12/logoOrmeauInverse@2x-e1508851762736.png"/>
            <img alt="Ormeau Logo" class="h-14 w-auto hidden dark:block" src="https://ormeautabletennis.com/wp-content/uploads/2021/12/logoOrmeauInverse@2x-e1508851762736.png"/>
          </div>
        </div>
        <div class="hidden md:flex flex-1 justify-center space-x-12">
          <a class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary font-medium text-lg transition-all duration-200 nav-link" href="/">Home</a>
          <a class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary font-medium text-lg transition-all duration-200 nav-link" href="/about">About</a>
          <div class="relative group">
            <span class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary font-medium text-lg transition-all duration-200 cursor-pointer">Club</span>
            <div class="absolute left-0 top-full pt-2 hidden group-hover:block z-50">
              <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl py-2 min-w-40">
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary" href="/timetable">Timetable</a>
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary" href="/events">Events</a>
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary" href="/teams">Teams</a>
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary" href="/champions">Champions</a>
                <a class="block px-4 py-2 text-gray-700 dark:text-gray-200 hover:bg-primary/10 hover:text-primary" href="/partners">Partners</a>
              </div>
            </div>
          </div>
          <a class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary font-medium text-lg transition-all duration-200 nav-link" href="/contact">Contact</a>
        </div>
        <div class="hidden md:flex items-center">
          <a class="px-8 py-3.5 rounded-full bg-primary text-white font-bold hover:bg-primary-hover transition-all duration-300 shadow-lg shadow-primary/25 hover:shadow-primary/40 transform hover:-translate-y-0.5 active:translate-y-0" href="/join">Join Now</a>
        </div>
        <div class="md:hidden flex items-center">
          <button id="mobile-menu-btn" class="md:hidden flex items-center text-gray-700 dark:text-gray-300 hover:text-primary focus:outline-none p-2">
            <span class="material-icons text-3xl">menu</span>
          </button>
        </div>
      </div>
    </div>
  </nav>

  <script is:inline>
    (function() {
      const path = window.location.pathname;
      document.querySelectorAll('.nav-link').forEach(link => {
        const href = link.getAttribute('href');
        if ((path === '/' && href === '/') || href === path || href === path + '/') {
          link.classList.add('text-primary', 'dark:text-primary');
        }
      });
    })();
  </script>

  <!-- Mobile Menu Panel -->
  <div id="mobile-menu" class="fixed inset-0 z-40 bg-background-light dark:bg-background-dark transform translate-x-full transition-transform duration-300 md:hidden">
    <div class="flex flex-col h-full pt-20 px-6">
      <div class="flex justify-end mb-8">
        <button id="mobile-menu-close" class="p-2 text-gray-700 dark:text-gray-300">
          <span class="material-icons text-3xl">close</span>
        </button>
      </div>
      <nav class="flex flex-col space-y-6 text-xl">
        <a href="/" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Home</a>
        <a href="/about" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">About</a>
        <a href="/timetable" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Timetable</a>
        <a href="/events" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Events</a>
        <a href="/teams" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Teams</a>
        <a href="/champions" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Champions</a>
        <a href="/partners" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Partners</a>
        <a href="/contact" class="text-gray-700 dark:text-gray-300 font-semibold hover:text-primary">Contact</a>
        <a href="/join" class="mt-4 px-6 py-3 bg-primary text-white font-bold text-center rounded-full hover:bg-primary-hover">Join Now</a>
      </nav>
    </div>
  </div>

  <script is:inline>
    // Mobile menu toggle
    (function() {
      const menuBtn = document.getElementById('mobile-menu-btn');
      const closeBtn = document.getElementById('mobile-menu-close');
      const mobileMenu = document.getElementById('mobile-menu');
      
      if (menuBtn && mobileMenu) {
        menuBtn.addEventListener('click', function() {
          mobileMenu.classList.remove('translate-x-full');
        });
      }
      
      if (closeBtn && mobileMenu) {
        closeBtn.addEventListener('click', function() {
          mobileMenu.classList.add('translate-x-full');
        });
      }
    })();
  </script>

  <!-- Newsletter Form Handler -->
  <script is:inline>
    document.getElementById('newsletter-form').addEventListener('submit', function(e) {
      e.preventDefault();
      const form = this;
      const status = document.getElementById('newsletter-status');
      const email = form.querySelector('input[type="email"]').value;
      
      // Simulate subscription (replace with actual backend integration)
      status.className = 'text-xs mt-2 text-green-400';
      status.textContent = 'Thanks for subscribing!';
      form.reset();
      
      setTimeout(function() {
        status.classList.add('hidden');
      }, 5000);
    });
  </script>

  <section class="relative bg-background-dark text-white overflow-hidden min-h-screen flex items-center">
    <div class="absolute inset-0 bg-black/60 z-10"></div>
    <div id="hero-bg" class="absolute inset-0 bg-cover bg-center z-0" style="background-image: url('https://xkwg7luliofrc1cs.public.blob.vercel-storage.com/Images/Par%20Gerell%20Ormeau%20.jpg');"></div>
    <div class="relative z-20 max-w-5xl mx-auto px-6 sm:px-8 lg:px-10 py-32 flex flex-col items-center text-center">
      <span class="inline-block py-2 px-6 rounded-full bg-primary/20 border border-primary/40 backdrop-blur-md text-sm font-bold mb-10 uppercase tracking-[0.2em] text-primary">Table Tennis For Everyone</span>
      <h1 class="text-5xl md:text-8xl font-bold tracking-tight mb-10 leading-[1.1] max-w-5xl"> ORMEAU <span class="text-primary">Table Tennis Club</span> <span class="block text-3xl md:text-5xl mt-4">Belfast</span> </h1>
      <p class="text-xl md:text-2xl text-gray-200 max-w-2xl mb-16 font-light leading-relaxed"> Whether you're starting your journey or pushing for the podium, Ormeau provides the environment, coaching, and community you need to thrive. </p>
      <div class="flex flex-col sm:flex-row items-center justify-center w-full max-w-md gap-6">
        <a class="px-8 py-4 rounded-full bg-primary text-white font-bold text-lg hover:bg-primary-hover transition-all duration-300 shadow-2xl shadow-primary/40 transform hover:-translate-y-1 text-center whitespace-nowrap" class="nav-link" href="/join"> Start Playing </a>
        <a class="px-8 py-4 rounded-full bg-transparent border-2 border-white/30 text-white font-bold text-lg hover:bg-white hover:text-black hover:border-white transition-all duration-300 flex items-center justify-center gap-2 text-center whitespace-nowrap" href="#how-the-club-works"> How The Club Works </a>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-24 bg-background-light dark:bg-background-dark">
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10">
      <div class="grid md:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="text-4xl md:text-5xl font-bold mb-8 leading-tight">More Than Just A <span class="text-primary">Club</span>,<br/>A Place To Grow.</h2>
          <div class="w-24 h-1.5 bg-primary rounded-full mb-8"></div>
          <p class="text-lg text-gray-600 dark:text-gray-300 mb-6 leading-relaxed"> Ormeau Table Tennis Club isn't just about hitting a ball back and forth. It's about personal development, resilience, and community. We've built a space where players of all ages come together to learn, compete, and support one another. </p>
          <p class="text-lg text-gray-600 dark:text-gray-300 mb-10 leading-relaxed"> From our humble beginnings to becoming a powerhouse in British table tennis, our core mission remains the same: to provide the best possible environment for everyone to enjoy the sport. </p>
          <a class="inline-flex items-center text-primary font-bold text-lg hover:underline underline-offset-4 decoration-2" class="nav-link" href="/about"> Learn More About Our Story <span class="material-icons ml-2">arrow_forward</span> </a>
        </div>
        <div class="relative">
          <div class="absolute -top-4 -left-4 w-full h-full border-2 border-primary rounded-3xl z-0"></div>
          <div class="relative z-10 rounded-3xl overflow-hidden shadow-2xl">
            <img alt="Club Atmosphere" class="w-full h-full object-cover" src="https://xkwg7luliofrc1cs.public.blob.vercel-storage.com/Images/group%20pic%20hero%20.jpg"/>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How The Club Works -->
  <section class="py-24 bg-surface-light dark:bg-surface-dark" id="how-the-club-works">
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10">
      <div class="text-center mb-20">
        <span class="text-primary font-bold tracking-widest uppercase text-sm">Your Journey</span>
        <h2 class="text-4xl font-bold mt-2 mb-6">How The Club Works</h2>
        <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto text-lg">We have a structured pathway designed to help every player find their level and enjoy the game.</p>
      </div>
      <div class="grid md:grid-cols-3 gap-10">
        <div class="bg-background-light dark:bg-background-dark p-10 rounded-3xl shadow-sm hover:shadow-xl transition-all duration-300 group border-b-4 border-primary">
          <div class="w-16 h-16 rounded-2xl bg-primary/10 flex items-center justify-center text-primary mb-8 group-hover:bg-primary group-hover:text-white transition-colors">
            <span class="material-symbols-outlined text-4xl">school</span>
          </div>
          <h3 class="text-2xl font-bold mb-4">Start with Coaching</h3>
          <p class="text-gray-600 dark:text-gray-400 leading-relaxed mb-6"> Beginners join our foundation classes. Learn the basics, grip, and movement in a fun, supportive group setting. </p>
        </div>
        <div class="bg-background-light dark:bg-background-dark p-10 rounded-3xl shadow-sm hover:shadow-xl transition-all duration-300 group border-b-4 border-gray-200 dark:border-gray-700 hover:border-primary">
          <div class="w-16 h-16 rounded-2xl bg-primary/10 flex items-center justify-center text-primary mb-8 group-hover:bg-primary group-hover:text-white transition-colors">
            <span class="material-symbols-outlined text-4xl">trending_up</span>
          </div>
          <h3 class="text-2xl font-bold mb-4">Progress at Your Pace</h3>
          <p class="text-gray-600 dark:text-gray-400 leading-relaxed mb-6"> Move up to intermediate squads as you improve. Participate in internal leagues and start testing your skills. </p>
        </div>
        <div class="bg-background-light dark:bg-background-dark p-10 rounded-3xl shadow-sm hover:shadow-xl transition-all duration-300 group border-b-4 border-gray-200 dark:border-gray-700 hover:border-primary">
          <div class="w-16 h-16 rounded-2xl bg-primary/10 flex items-center justify-center text-primary mb-8 group-hover:bg-primary group-hover:text-white transition-colors">
            <span class="material-symbols-outlined text-4xl">trophy</span>
          </div>
          <h3 class="text-2xl font-bold mb-4">Opportunities to Go Further</h3>
          <p class="text-gray-600 dark:text-gray-400 leading-relaxed mb-6"> Elite coaching for those aiming for national selection. Represent the club in the British League and international events. </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Coaching Section -->
  <section class="py-24 bg-background-light dark:bg-background-dark relative overflow-hidden">
    <div class="absolute right-0 top-0 w-1/3 h-full bg-surface-light dark:bg-surface-dark/50 hidden lg:block"></div>
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10 relative z-10">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <span class="text-primary font-bold tracking-widest uppercase text-sm">Coaching</span>
          <h2 class="text-4xl md:text-5xl font-bold mt-2 mb-8">Built By Players, For Players</h2>
          <p class="text-lg text-gray-600 dark:text-gray-300 mb-8"> Keith and Gervis Knox didn't just build a club — they built the coaching environment they wished they'd had. Both played for Ulster and Ireland before dedicating themselves to coaching, and that playing experience shapes everything about how sessions are run at Ormeau. </p>
          <ul class="space-y-6 mb-10">
            <li class="flex items-start">
              <span class="material-icons text-primary mr-4 mt-1 text-xl">check_circle</span>
              <div>
                <h4 class="font-bold text-lg">Coaches who've been there</h4>
                <p class="text-gray-500 dark:text-gray-400 text-sm">Our head coaches represented Ulster and Ireland before making coaching their career.</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="material-icons text-primary mr-4 mt-1 text-xl">check_circle</span>
              <div>
                <h4 class="font-bold text-lg">Individual attention in every session</h4>
                <p class="text-gray-500 dark:text-gray-400 text-sm">Small group sizes mean every player is seen, guided, and challenged.</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="material-icons text-primary mr-4 mt-1 text-xl">check_circle</span>
              <div>
                <h4 class="font-bold text-lg">A pathway that actually works</h4>
                <p class="text-gray-500 dark:text-gray-400 text-sm">From your first session to the British Premier League — we've walked players through every step.</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="material-icons text-primary mr-4 mt-1 text-xl">check_circle</span>
              <div>
                <h4 class="font-bold text-lg">Coaching for every level</h4>
                <p class="text-gray-500 dark:text-gray-400 text-sm">Whether you're a complete beginner or pushing for national selection, there's a session built for you.</p>
              </div>
            </li>
          </ul>
          <a class="px-8 py-4 rounded-full bg-primary text-white font-bold text-lg hover:bg-primary-hover transition shadow-lg inline-block" class="nav-link" href="/join"> Sign Up For Coaching </a>
        </div>
        <div class="relative h-[600px] rounded-3xl overflow-hidden shadow-2xl">
          <img alt="Keith Knox" class="absolute inset-0 w-full h-full object-cover" src="https://scontent-lhr8-1.xx.fbcdn.net/v/t1.6435-9/33714951_2266436823367244_3227841053075701760_n.jpg?_nc_cat=108&ccb=1-7&_nc_sid=f798df&_nc_ohc=XCYdjORkGrsQ7kNvwGNsPO9&_nc_oc=AdmmuaqIsGwVGieU-8cZ0ux8pe8wz1YjYYwzLkO2EzYcl5Ul_sckxbS236KKpE-_x473l0Vkc42Y93AzGUucB0zs&_nc_zt=23&_nc_ht=scontent-lhr8-1.xx&_nc_gid=-bC64Soh4sCl7wbkW0KtzA&oh=00_AftZKhDlsSjLDapBPV5Fs2FD_ccSdlH71I0059BU4BceYA&oe=69C2E1D8"/>
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"></div>
          <div class="absolute bottom-10 left-10 text-white">
            <p class="font-bold text-2xl">Keith Knox</p>
            <p class="text-primary font-medium">Head Performance Coach</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Champions Section -->
  <section class="py-24 bg-black text-white">
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">Proven Pathways</h2>
        <p class="text-gray-400 text-lg max-w-2xl mx-auto">From our club to the world stage. We are proud of our champions.</p>
      </div>
      <div class="mb-20 rounded-3xl overflow-hidden relative aspect-video md:aspect-[21/9] group">
        <img alt="British League Premier Champions 2024" class="w-full h-full object-cover object-top opacity-80 group-hover:opacity-100 transition duration-700" src="https://xkwg7luliofrc1cs.public.blob.vercel-storage.com/Images/British%20League%20Champions%202024.jpeg"/>
        <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent"></div>
        <div class="absolute bottom-0 left-0 p-8 md:p-12">
          <h3 class="text-3xl md:text-4xl font-bold mb-2">British League Premier Champions</h3>
          <p class="text-primary text-xl font-medium">2022-23 Season</p>
          <a href="https://www.tabletennisengland.co.uk/news/2023/ormeau-crowned-champions-as-2022-23-sbl-premier-division-comes-to-a-close/" target="_blank" rel="noopener noreferrer" class="inline-block mt-4 px-6 py-2 bg-white text-black font-bold rounded-full hover:bg-gray-200 transition-colors">Read More</a>
        </div>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="group relative overflow-hidden rounded-2xl bg-gray-900 aspect-[4/5]">
          <img alt="Owen Cathcart" class="absolute inset-0 w-full h-full object-cover opacity-60 group-hover:opacity-90 transition duration-500 scale-100 group-hover:scale-105" src="https://scontent-lhr6-1.xx.fbcdn.net/v/t1.6435-9/29356593_2161628553848072_6140789986070364160_n.jpg?_nc_cat=102&ccb=1-7&_nc_sid=f798df&_nc_ohc=aQujp0WKy_wQ7kNvwGIvoZW&_nc_oc=Admuy7icN44zYz9mWUsGyKx-G9c6F4U3oh1gB_4q0hR5CWvqijBVc98YSZ9NLL_yB6j19kCOObl963dj6jeq2SSl&_nc_zt=23&_nc_ht=scontent-lhr6-1.xx&_nc_gid=ypsOkhgTRCGZYR-dzW-CuA&oh=00_Aft8bzH8t1I70h_xRvke254EN3Ov6FHyTg8VnGsYlmu1iQ&oe=69C2CA36"/>
          <div class="absolute bottom-0 left-0 p-8 w-full bg-gradient-to-t from-black/90 to-transparent">
            <h3 class="text-2xl font-bold">Owen Cathcart</h3>
            <p class="text-gray-300 text-sm mt-1">30+ World Tour Medals</p>
          </div>
        </div>
        <div class="group relative overflow-hidden rounded-2xl bg-gray-900 aspect-[4/5]">
          <img alt="Sophie Earley" class="absolute inset-0 w-full h-full object-cover opacity-60 group-hover:opacity-90 transition duration-500 scale-100 group-hover:scale-105" src="https://marypeterstrust.org/wp-content/uploads/2022/07/Sophie-Earley-2.jpg"/>
          <div class="absolute bottom-0 left-0 p-8 w-full bg-gradient-to-t from-black/90 to-transparent">
            <h3 class="text-2xl font-bold">Sophie Earley</h3>
            <p class="text-gray-300 text-sm mt-1">2x European Youth Medalist</p>
          </div>
        </div>
        <div class="group relative overflow-hidden rounded-2xl bg-gray-900 aspect-[4/5]">
          <img alt="Peadar Sheridan" class="absolute inset-0 w-full h-full object-cover opacity-60 group-hover:opacity-90 transition duration-500 scale-100 group-hover:scale-105" src="https://scontent-lhr6-1.xx.fbcdn.net/v/t39.30808-6/638290534_1253115230131717_8670556813026375757_n.jpg?_nc_cat=109&ccb=1-7&_nc_sid=13d280&_nc_ohc=iu6if3p5abQQ7kNvwEuxJo_&_nc_oc=Adk0rDIS5fXSst427CLmGbKQFSwRSV78L-FSxA9e-oNvYY1vF-9UITj9JmXp_KVvIx770-73yGSgmPDCjXKbr9mm&_nc_zt=23&_nc_ht=scontent-lhr6-1.xx&_nc_gid=6_xaye8_k4wW5tKLRyUWjg&oh=00_Afs6oArB9_q434wznOt2rXLdAhuxmsCeL2vJkziOLisbJQ&oe=69A1305B"/>
          <div class="absolute bottom-0 left-0 p-8 w-full bg-gradient-to-t from-black/90 to-transparent">
            <h3 class="text-2xl font-bold">Peadar Sheridan</h3>
            <p class="text-gray-300 text-sm mt-1">European No.1 U13</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-24 bg-surface-light dark:bg-surface-dark">
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10">
      <h2 class="text-3xl font-bold text-center mb-16">What They Say</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-background-light dark:bg-background-dark p-8 rounded-2xl shadow-sm relative">
          <span class="material-icons text-6xl text-primary/10 absolute top-6 right-6">format_quote</span>
          <p class="text-gray-600 dark:text-gray-300 mb-6 italic relative z-10">"The coaching standard at Ormeau is second to none. They have created a professional environment that is still welcoming to everyone."</p>
          <div class="flex flex-col items-center text-center">
            <img alt="Jeff Harrison" class="w-24 h-24 rounded-full object-top mb-4" src="https://scontent-lhr6-1.xx.fbcdn.net/v/t39.30808-6/494757653_1244216044376930_7577755996940669042_n.jpg?_nc_cat=109&ccb=1-7&_nc_sid=13d280&_nc_ohc=SM0_a2YqR3wQ7kNvwHOzJAY&_nc_oc=Adl24-glDKSeEvy6xM1MMMdX70PzMStw5DL-Y2HFK0449CbgAwI3tE9V9OnAwuMpljP8TqkkZ2LfLZQqdTpPJ-9L&_nc_zt=23&_nc_ht=scontent-lhr6-1.xx&_nc_gid=NXn46Yc8lx8yyXKGJ2TeYQ&oh=00_Afsrf-dRBe8mU43KuDgYwj-eiFxLSj3SQ1C6T_fbUs8EUg&oe=69A14F25"/>
            <h4 class="font-bold">Jeff Harrison</h4>
            <p class="text-xs text-gray-400 uppercase">Club Member</p>
          </div>
        </div>
        <div class="bg-background-light dark:bg-background-dark p-8 rounded-2xl shadow-sm relative">
          <span class="material-icons text-6xl text-primary/10 absolute top-6 right-6">format_quote</span>
